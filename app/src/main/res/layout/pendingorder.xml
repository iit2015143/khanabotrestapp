<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upbar"
        android:padding="4dp"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Id :"
            android:textColor="@color/primary"
            android:textSize="@dimen/nletter" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Order Id :"
            android:textColor="@color/moan"
            android:layout_marginLeft="4dp"
            android:id="@+id/orderid"
            android:textSize="@dimen/sletter" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:id="@+id/time"
            android:textColor="@color/monsoon"
            android:textSize="@dimen/sletter" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upbar"
        android:padding="4dp"
        android:id="@+id/summarybar"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Summary"
            android:textColor="@color/moan"
            android:textSize="@dimen/nletter" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="4dp"
            android:text="SummarySummarySummarySummarySummarySummarySummarySummary:"
            android:id="@+id/summary"
            android:textColor="@color/moan"
            android:textSize="@dimen/sletter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summarybar"
        android:id="@+id/totalbar"
        android:padding="4dp"
        android:weightSum="5">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textColor="@color/moan"
            android:textSize="@dimen/nletter" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="Rs 275"
            android:id="@+id/total"
            android:textColor="@color/black"
            android:textSize="@dimen/sletter" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="4dp"
            android:text="Rs 275"
            android:id="@+id/revisedTotal"
            android:textColor="@color/black"
            android:textSize="@dimen/sletter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalbar"
        android:id="@+id/addressbar"
        android:weightSum="5"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address"
            android:textColor="@color/moan"
            android:textSize="@dimen/nletter" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="4dp"
            android:text="Rs 275"
            android:id="@+id/address"
            android:textColor="@color/black"
            android:textSize="@dimen/sletter" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addressbar"
        android:id="@+id/btncontainer"
        android:padding="8dp"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Accept"
                android:id="@+id/btnone"
                android:textColor="@color/white"
                android:textSize="@dimen/vsletter"
                android:gravity="center_horizontal"/></LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btntwo"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Decline"
                android:textColor="@color/white"
                android:textSize="@dimen/vsletter"
                android:gravity="center_horizontal"/></LinearLayout>
    </LinearLayout>
</RelativeLayout>